{
  "name": "@linthtml/linthtml",
  "version": "0.2.1",
  "description": "An unofficial html5 linter.",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/KamiKillertO/linthtml.git"
  },
  "bin": {
    "linthtml": "bin/linthtml.js"
  },
  "keywords": [
    "html",
    "lint",
    "hint",
    "linthtml",
    "linter"
  ],
  "main": "lib/index.js",
  "scripts": {
    "test": "gulp tests",
    "coverage": "npx nyc --reporter=lcovonly --reporter=text npm test",
    "coverage:report": "npm run coverage && npx nyc report --reporter=text-lcov | coveralls",
    "commit": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r -a",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r -a && git add CHANGELOG.md"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-angular": "7.5.0",
    "@commitlint/config-conventional": "7.5.0",
    "chai": "4.2.0",
    "commitizen": "3.1.1",
    "conventional-changelog-cli": "2.0.17",
    "coveralls": "3.0.3",
    "cz-conventional-changelog": "2.1.0",
    "gulp": "4.0.1",
    "gulp-eslint": "5.0.0",
    "gulp-gh-pages": "0.5.4",
    "gulp-jsdoc3": "2.0.0",
    "gulp-mocha": "6.0.0",
    "husky": "2.3.0",
    "mocha": "6.1.4"
  },
  "dependencies": {
    "bulk-require": "1.0.1",
    "bulkify": "1.4.2",
    "chalk": "2.4.2",
    "globby": "9.1.0",
    "htmlparser2": "3.10.1",
    "cosmiconfig": "5.2.1",
    "meow": "5.0.0",
    "ora": "3.4.0"
  },
  "browserify": {
    "transform": [
      "bulkify"
    ]
  },
  "engines": {
    "node": ">6"
  },
  "contributors": [
    "Benjamin JEGARD <kamikillerto@gmail.com> (https://github.com/KamiKillertO)"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "bugs": {
    "url": "https://github.com/KamiKillertO/linthtml/issues"
  },
  "homepage": "https://github.com/KamiKillertO/linthtml#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin",
    "lib"
  ],
  "author": "Benjamin JEGARD <kamikillerto@gmail.com>",
  "private": false,
  "nyc": {
    "exclude": [
      "gulpfile.js"
    ]
  }
}
